	<category name="com.wqh" additivity="true">
		<priority value="debug" />
		<appender-ref ref="console.CONSOLE" />
		<appender-ref ref="file.text.DATE_FILE" />
	</category>

	<category name="org" additivity="true">
		<priority value="WARN" />
		<appender-ref ref="console.CONSOLE" />
